FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      particleForces;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [2 -5 -2 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    top
    {
        type            zeroGradient;
    }

    bottom
    {
        type            zeroGradient;
    }

    side
    {
        type            zeroGradient;
    }
    inlet
    {
        type            zeroGradient;
    }

    outlet_up
    {
        type            zeroGradient;
    }

    outlet_down
    {
        type            zeroGradient;
    }
}

